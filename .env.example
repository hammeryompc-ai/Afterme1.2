# Local development environment - DO NOT use in production
# Copy this file to .env and update with your actual values
# NEVER commit .env files to version control

# MongoDB connection
# For local development, use: mongodb://localhost:27017/afterme
# For production, use MongoDB Atlas URI (store securely, not in this file)
MONGODB_URI=mongodb://localhost:27017/afterme

# JWT secret - Generate a strong random value for production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_STRONG_SECRET_FOR_PRODUCTION

# Application port
PORT=5000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# AI Service URL
AI_SERVICE_URL=http://localhost:6000

# Cloud Storage (optional)
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret
# AWS_REGION=us-east-1
# AWS_BUCKET_NAME=afterme-storage

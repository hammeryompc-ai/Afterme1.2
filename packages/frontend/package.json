{
  "name": "afterme-frontend",
  "version": "1.2.0",
  "description": "Premium messenger frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src",
    "cap:init": "cap init Afterme com.afterme.app --web-dir dist",
    "cap:sync": "cap sync",
    "cap:copy": "cap copy",
    "build:android": "npm run build && cap sync android",
    "build:ios": "npm run build && cap sync ios",
    "open:android": "cap open android",
    "open:ios": "cap open ios",
    "android": "npm run build:android && npm run open:android",
    "ios": "npm run build:ios && npm run open:ios"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "axios": "^1.6.0",
    "socket.io-client": "^4.7.0",
    "zustand": "^4.4.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.308.0",
    "react-hot-toast": "^2.4.1",
    "date-fns": "^2.30.0",
    "react-textarea-autosize": "^8.5.3",
    "wavesurfer.js": "^7.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/android": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "@capacitor/keyboard": "^6.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.0",
    "@capacitor/cli": "^6.0.0"
  }
}
